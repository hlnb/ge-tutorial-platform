		"vue": "^3.3.4",
		"vue-codemirror": "^4.0.6",
		"vue-router": "^4.2.4"
	},
	"devDependencies": {
		"@eslint/config-array": "^0.20.0",
		"@eslint/js": "^9.26.0",
		"@eslint/object-schema": "^2.1.6",
		"@rushstack/eslint-patch": "^1.3.3",
